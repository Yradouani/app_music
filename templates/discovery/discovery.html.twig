{% extends 'base.html.twig' %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('assets/style/discovery.css') }}">
{% endblock %}

{% block javascripts %}
	<script src="{{ asset('assets/js/discovery.js') }}"></script>
{% endblock %}

{% block title %}Discovery
{% endblock %}


{% block main %}

	<div id="discovery">


		<div id="divSearch">
			<i id="searchIcon" class="fa-solid fa-magnifying-glass"></i>
			<input id="search" type="text" placeholder="Rechercher">

			<hr>
		</div>

		<div>
			<h1>swiper</p>
		</div>

		<div id="divGenre">
			<h4 id="titleGenre">Genres</h4>

			<div class="divGenreButton">
				<button id="rapButton" class="genreButton">Rap</button>
				<button id="popButton" class="genreButton">Pop</button>
				<button id="rockButton" class="genreButton">Rock</button>
				<button id="rnbButton" class="genreButton">R&amp;B</button>
			</div>

			<div class="divGenreButton">
				<button id="jazzButton" class="genreButton">Jazz</button>
				<button id="classiqueButton" class="genreButton">Classique</button>
