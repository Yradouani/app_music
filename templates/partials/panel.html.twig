{% block javascripts %}
	<script src="{{ asset('assets/js/base.js')}}" defer></script>

{% endblock %}
{% if pseudo is defined %}
	<div id="user-info">
		<i class="fa-solid fa-user"></i>
		<span>{{ pseudo }}</span>
	</div>
{% endif %}
<nav id="mobile-nav">
	<div class="menu-title">
		<button>
			<i class="fa-solid fa-xmark"></i>
		</button>
	</div>
	{% if pseudo is defined %}
		<div id="user-info-nav">
			<i class="fa-solid fa-user"></i>
			<span>{{ pseudo }}</span>
		</div>
	{% endif %}
	<div class="top-links">
		<a href={{ path('discovery.index') }}>
			<i class="fa-solid fa-headphones"></i>
			<span>Découvertes</span>
		</a>
		<a href={{ path('playlist.index') }}>
			<i class="fa-solid fa-music"></i>
			<span>Playlists</span>
		</a>
		<a href={{ path('favorite.index') }}>
			<i class="fa-solid fa-heart"></i>
			<span>Favoris</span>
		</a>
	</div>
	<div class="bottom-links">

		{% if app.session.get('roleUser') != null %}
			{% if app.session.get('roleUser')[0] == "ROLE_ADMIN" %}
				<a href="{{ path('admin.index') }}">
					<i class="fa-solid fa-lock"></i>
					<span>Admin</span>
				</a>
			{% endif %}
		{% endif %}

		<a href={{ path('logout') }}>
			<i class="fa-solid fa-power-off"></i>
			<span>Déconnexion</span>
		</a>
	</div>
</nav>
